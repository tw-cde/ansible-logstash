{
    "template" : "*",
    "settings" : {
        "number_of_shards" : 1
    },
    "mappings" : {
        "logs" : {
            "_all" : {"enabled" : false},
            "properties" : {
               "message": { "type": "string", "index": "analyzed" },
               "app": { "type": "string", "index": "not_analyzed" },
               "tags": { "type": "string", "index": "not_analyzed" },
               "host": { "type": "string", "index": "not_analyzed" }
            }
        },
        "system" : {
            "properties" : {
               "beat": {
                    "properties": {
                        "hostname": {
                            "type": "string", "index": "not_analyzed"
                        },
                        "name": {
                            "type": "string", "index": "not_analyzed"
                        }
                    }
               }
            }
        },
        "filesystem" : {
            "properties" : {
               "beat": {
                    "properties": {
                        "hostname": {
                            "type": "string", "index": "not_analyzed"
                        },
                        "name": {
                            "type": "string", "index": "not_analyzed"
                        }
                    }
               }
            }
        },
        "process" : {
            "properties" : {
               "beat": {
                    "properties": {
                        "hostname": {
                            "type": "string", "index": "not_analyzed"
                        },
                        "name": {
                            "type": "string", "index": "not_analyzed"
                        }
                    }
               }
            }
        }
    }
}
